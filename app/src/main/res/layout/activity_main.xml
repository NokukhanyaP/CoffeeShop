<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nokukhanya.coffeeshop.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#DEB887"
        android:text="COFFEE SHOPppppppppp"
        android:textColor="#DEB887"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iced Coffee"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_above="@+id/editText5"
        android:layout_alignRight="@+id/checkBox2"
        android:layout_alignEnd="@+id/checkBox2"/>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cappucinno"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottomless Coffee"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"/>

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brewed Coffee"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_below="@+id/editText6"
        android:layout_alignLeft="@+id/total"
        android:layout_alignStart="@+id/total"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL"
        android:fontFamily="cursive"
        android:textColor="#DC143C"
        android:background="#ffffff"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/checkBox4"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/coffee"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView8"
        android:layout_toLeftOf="@+id/textView11"
        android:layout_toStartOf="@+id/textView11"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KHANYAz COFFEE HOUSE"
        android:background="#DEB887"
        android:fontFamily="cursive"
        android:textColor="#DC143C"
        android:textAlignment="center"
        android:textSize="17sp"
        android:layout_toRightOf="@+id/checkBox4"
        android:layout_toEndOf="@+id/checkBox4"
        android:layout_alignParentTop="true"/>


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text=""/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLACE ORDER"
        android:fontFamily="cursive"
        android:textColor="#DC143C"
        android:background="#DEB887"
        android:textStyle="italic"

        android:textAlignment="center"
        android:textSize="17sp"
        android:layout_above="@+id/editText1"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="textPersonName"
        android:text="R45.00"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_alignLeft="@+id/editText6"
        android:layout_alignStart="@+id/editText6"/>

    <EditText
        android:id="@+id/ediText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="textPersonName"
        android:text="R35.00"
        android:layout_above="@+id/total"
        android:layout_alignLeft="@+id/editText6"
        android:layout_alignStart="@+id/editText6"/>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="textPersonName"
        android:text="R40.00"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignStart="@+id/editText1"/>

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="textPersonName"
        android:text="R30.00"
        android:layout_alignBottom="@+id/checkBox3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R0.00"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/total"
        android:layout_alignBottom="@+id/total"
        android:layout_alignRight="@+id/ediText4"
        android:layout_alignEnd="@+id/ediText4"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"/>

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:fontFamily="cursive"
        android:textColor="#DC143C"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/checkBox2"
        android:layout_alignEnd="@+id/checkBox2"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:textColor="#DC143C"
        android:background="#DEB887"
        android:text="EXIT"
        android:layout_alignBaseline="@+id/clear"
        android:layout_alignBottom="@+id/clear"
        android:layout_alignLeft="@+id/ediText4"
        android:layout_alignStart="@+id/ediText4"/>

</RelativeLayout>
